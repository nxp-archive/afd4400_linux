menu "Freescale D4400 support"
	depends on ARCH_D4400

comment "Device tree only"

config HAVE_D4400_GPC
	bool

config SOC_D4400
	bool "D4400 support"
	select ARM_GIC
	select COMMON_CLK
	select PINCTRL
	select PINCTRL_D4400
	select HAVE_D4400_GPC
	select GCR_DEV
	select CPU_V7
	help
	  This enables support for Freescale D4400 processor.

endmenu

config SERDES_D4400
       tristate "SerDes driver"
       depends on SOC_D4400
       help
       SerDes driver for Freescale D4400 processor
	The SerDes module implements link serialization/deserialization
	functions for high speed serial interfaces from 1.2288 Gbaud to
	9.8304 Gbaud

config SRC_D4400
       tristate "System reset controller driver"
       depends on SOC_D4400
       help
       System reset controller driver  for Freescale D4400 processor

